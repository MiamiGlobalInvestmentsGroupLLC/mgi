
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  usages    Usage[]
  chats     Chat[]
}

model Chat {
  id        String   @id @default(cuid())
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  createdAt DateTime @default(now())
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  role      String
  content   String
  createdAt DateTime @default(now())
}

model Usage {
  id        String   @id @default(cuid())
  company   Company  @relation(fields: [companyId], references: [id])
  companyId String
  day       DateTime
  count     Int      @default(0)

  @@unique([companyId, day])
}
